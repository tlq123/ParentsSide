<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerInside"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@mipmap/app_logo">
    </ImageView>

    <TextView
        android:id="@+id/me_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="131"
        android:layout_gravity="center_horizontal"
        android:textSize="16dp"
        android:textColor="@color/text_color_3"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="30dp"
        android:background="@color/line_color"
        />
    <TextView
        android:id="@+id/me_peiwang"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="配网"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:drawableRight="@mipmap/ic_public_arrow_right_900"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textColor="@color/text_color_3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"
        />
    <TextView
        android:id="@+id/me_bandle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="绑定设备"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:drawableRight="@mipmap/ic_public_arrow_right_900"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textColor="@color/text_color_3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"
        />
    <TextView
        android:id="@+id/me_unbandle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="解绑设备"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:drawableRight="@mipmap/ic_public_arrow_right_900"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textColor="@color/text_color_3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"
        />
    <TextView
        android:id="@+id/me_zhanghao"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="切换账号"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:drawableRight="@mipmap/ic_public_arrow_right_900"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textColor="@color/text_color_3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"
        />
    <TextView
        android:id="@+id/me_check_app"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="检查版本更新"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:drawableRight="@mipmap/ic_public_arrow_right_900"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textColor="@color/text_color_3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"
        />


</LinearLayout>
